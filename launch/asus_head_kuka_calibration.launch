<launch>

	<arg name="calibration_name" default="asus_head_kuka_calib"/>

	<!-- ASUS TOPICS -->
	<!-- launch the ar tracker, units in cm, adjust at will -->
	<arg name="marker_size" default="13.18" />
	<arg name="max_new_marker_error" default="0.08" />
	<arg name="max_track_error" default="0.2" />

	<arg name="cam_image_topic" default="/camera/depth_registered/points" />
	<arg name="cam_info_topic" default="/camera/depth_registered/camera_info" />
	<arg name="output_frame" default="/camera_depth_optical_frame" />

	<node name="ar_track_alvar" pkg="ar_track_alvar" type="individualMarkers" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame)" />

	<!-- launch the rgbd sensor, in this case using openni2 for the asus -->
	<include file="$(find openni2_launch)/launch/openni2.launch">
		<arg name="depth_registration" value="true" />
		<arg name="color_depth_synchronization" value="true" />
	</include>

	<!-- LOAD ROBOT DESCRIPTION AND HW -->

	<!-- CALIBRATION SETUP -->
	<param name="frame_id" value="camera_depth_optical_frame" /> <!-- respect the ar marker is obtained with -->
	<param name="ar_marker_frame" value="ar_marker_10" />
	<param name="child_frame_id" value="world" />
	<param name="calibrator_frame" value="calibrator_10"/>
	<param name="calibration_name" value="$(arg calibration_name)"/>
	<node name="right_kuka_camera_calibrator" pkg="calibration" type="simple_calibrator" respawn="true" output="screen"/>

	<!-- only one is required, since the two robots are in the same tf tree, just let it here in case you use one or the other
	<!--
	<param name="frame_id" value="camera_depth_optical_frame" />
	<param name="ar_marker_frame" value="ar_marker_20" />
	<param name="child_frame_id" value="world" />
	<param name="calibrator_frame" value="calibrator_20"/>
	<param name="calibration_name" value="$(arg calibration_name)"/>
	<node name="left_kuka_camera_calibrator" pkg="calibration" type="simple_calibrator" respawn="true" output="screen"/>
	-->

</launch>